{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                               
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
